@charset "utf-8";
#headmain{
position:absolute;
margin-top:0px;
width:100%;
height:120px;
background-color:#1A1A1A;
z-index:9999;
transition:height 1s linear;
}

#log_reg{
position:absolute;
margin-left:1200px;
height:30px;
font-size:15px;
height:20px;
}
/*如果设置连接字体的默认a：link没有用 就单独对a标签设置颜色*/
#log_reg a{
color:#FFF;
}
#web_name{
position:absolute;
font-size:45px;
margin-top:20px;
margin-left:500px;
color:#FFF;
height:50px;
line-height:50px;
width:270px;
}

a:link{
text-decoration:none;
}
a:hover{
color:#F00;
}
#cho_li{
width:100%;
height:50px;
background-color:#1A1A1A;
margin-top:70px;
transition:height 1s linear;
}
#cho_li:hover{
height:170px;
}
ul{
width:800px;
height:30px;
margin-left:250px;
}
ul li{
float:left;
list-style:none;
width:200px;
height:30px;
color:#FFF;
font-family:Verdana, Geneva, sans-serif;
font-size:20px;
text-align:center;
}
.lidiv div{
color:#FFF;
font-family:Verdana, Geneva, sans-serif;
font-size:20px;
text-align:center;
background-color:#1A1A1A;
}
.lidiv div a{
color:#FFF;
}
.lidiv{
width:200px;
height:0px;
overflow:hidden;
transition:height 1s linear;
}
ul li:hover{
border-top:1px solid #999;
background-color:#000;
}
ul li:hover .lidiv{
height:130px;
}
.lidiv div:hover{
filter: Alpha(Opacity=60);
opacity:0.6;
-moz-opacity:0.6;
}
#main{
position:absolute;
margin-top:100px;
width:100%;
text-align:center;
}
#tableinfo{
border:none;
width:85%;
margin-left:100px;
}
#tableinfo tr{
height:100px;
margin-top:30px;
}
#tableinfo tr td{
width:100px;
}

#footer{
	position:fixed;
margin-top:25px;
border:1px;
width:90%;
background-color:white;
margin-left:85px;
z-index:99999;
}
#footer tr{
height:50px;
}